<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/fl_fragment_rss_item_detail_header"
            android:layout_width="match_parent"
            android:layout_height="320dp">

            <ImageView
                android:id="@+id/iv_fragment_rss_item_detail_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white_primary_54"/>

            <ProgressBar
                android:id="@+id/pb_fragment_rss_item_detail_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:indeterminateOnly="true"
                android:layout_gravity="center"/>

        </FrameLayout>

        <io.bloc.android.blocly.ui.widget.RobotoTextView
            style="@style/RssItemDetailHeader"
            android:id="@+id/tv_fragment_rss_item_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/fl_fragment_rss_item_detail_header"
            android:layout_marginBottom="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"/>

        <io.bloc.android.blocly.ui.widget.RobotoTextView
            style="@style/Body1"
            android:id="@+id/tv_fragment_rss_item_detail_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fl_fragment_rss_item_detail_header"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"/>

    </RelativeLayout>

</ScrollView>