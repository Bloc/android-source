<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Window Background -->
        <item name="android:windowBackground">@color/windowBackground</item>
        <!-- AppCompat Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- DrawerArrowStyle -->
        <item name="drawerArrowStyle">@style/DrawerArrow</item>
    </style>

    <style name="DrawerArrow">
        <item name="color">@color/teal</item>
        <item name="spinBars">true</item>
        <item name="thickness">3dp</item>
        <item name="arrowShaftLength">8dp</item>
        <item name="arrowHeadLength">4dp</item>
        <item name="barLength">18dp</item>
        <item name="gapBetweenBars">5dp</item>
        <item name="drawableSize">18dp</item>
    </style>

    <style name="Headline">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">24sp</item>
        // #1
        <item name="android:ellipsize">end</item>
        // #2
        <item name="robotoFont">Regular</item>
    </style>

    <style name="Caption">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="robotoFont">Regular</item>
    </style>

    <style name="Body1">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="robotoFont">Regular</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@drawable/btn_text_drawable</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="robotoFont">CondensedBold</item>
    </style>

    <style name="NavigationItem">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/navigation_item_text</item>
        <item name="android:singleLine">true</item>
        <item name="robotoFont">Medium</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
